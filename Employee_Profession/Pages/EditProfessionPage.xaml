<Page x:Class="Employee_Profession.Pages.EditProfessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee_Profession.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditProfessionPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btn_back"
                Content="Назад"
                FontSize="25"
                Grid.Column="0"
                Grid.Row="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED" 
                Click="btn_back_Click"/>

        <TextBlock Text="Профессия"
                   FontSize="30"
                   Grid.Column="2"
                   Grid.ColumnSpan="5"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="#FF1446A3"/>

        <Button x:Name="btn_save"
                Content="Сохранить"
                FontSize="25"
                Grid.Column="7"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Click="btn_save_Click"/>

        <Button x:Name="btn_save_new"
                Content="Сохранить"
                FontSize="25"
                Grid.Column="7"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Click="btn_save_new_Click"/>

        <Button x:Name="btn_delete"
                Content="Удалить"
                FontSize="25"
                Grid.Column="6"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Click="btn_delete_Click"/>

        <TextBlock Text="Название: "
                   FontSize="25"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="#FF1446A3"/>
        <TextBox x:Name="tb_Title"
                 Text="{Binding editProfession.Title}"
                 FontSize="20"
                 Grid.Column="4"
                 Grid.ColumnSpan="3"
                 Grid.Row="2"
                 VerticalAlignment="Center"
                 Foreground="#FF1446A3"
                 Margin="5, 2"/>

        <TextBlock Text="Категория профессии: "
                   FontSize="25"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="#FF1446A3"/>
        <ComboBox x:Name="cb_Category"
                  SelectedItem="{Binding editProfession.Profession_Category}"
                  FontSize="20"
                  Grid.Column="4"
                  Grid.ColumnSpan="3"
                  Grid.Row="3"
                  VerticalAlignment="Center"
                  Foreground="#FF1446A3"
                  Margin="5,2"/>
    </Grid>
</Page>
