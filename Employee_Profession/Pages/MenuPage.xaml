<Page x:Class="Employee_Profession.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee_Profession.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Меню"
                   Grid.Column="1"
                   Grid.Row="1"
                   FontSize="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF1446A3"/>

        <Button x:Name="btn_Employee"
                Content="Сотрудники"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="30"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3" 
                Background="#FF80D9ED"
                Margin="5" Click="btn_Employee_Click"/>

        <Button x:Name="btn_Department"
                Content="Отделы"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="30"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Margin="5"/>

        <Button x:Name="btn_Profession"
                Content="Профессии"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="30"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Margin="5"/>

        <Button x:Name="btn_back"
                Content="Назад"
                FontSize="25"
                Grid.Column="0"
                Grid.Row="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED" Click="btn_back_Click"/>
    </Grid>
</Page>
