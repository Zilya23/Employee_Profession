<Page x:Class="Employee_Profession.Pages.RolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee_Profession.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolePage">

    <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать!"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   FontSize="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Foreground="#FF1446A3"/>
        
        <TextBlock Text="Выберите роль:"
                   Grid.Column="1"
                   Grid.Row="2"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF1446A3"/>

    <Button x:Name="btn_Depart_Dir"
                Content="Руководитель отдела"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="20"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3" 
                Background="#FF80D9ED"
                Margin="5" Click="btn_Depart_Dir_Click"/>


    <Button x:Name="btn_Employee_Depart"
                Content="Отдел кадров"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="20"
                Foreground="#FF1446A3"
                BorderBrush="#FF1446A3"
                Background="#FF80D9ED"
                Margin="5" Click="btn_Employee_Depart_Click"/>
    </Grid>
</Page>
